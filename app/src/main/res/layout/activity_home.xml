<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:clipToPadding="true"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="control.home.HomeActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#29b6f6"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="监 护 列 表"
            android:id="@+id/textView"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/add_btn"
            app:layout_heightPercent="55%"
            app:layout_widthPercent="8%"
            android:src="@drawable/add_btn"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:layout_marginLeftPercent="4%"
            app:layout_marginTopPercent="22%"
            android:onClick="doAdd"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/msg_btn"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="8%"
            android:src="@drawable/msg_btn"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:layout_marginLeftPercent="87%"
            app:layout_marginTopPercent="22%"
            android:onClick="doMsg"/>

        <com.ld.qmwj.view.BadgeView
            android:id="@+id/badgeView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="6%"
            app:layout_marginLeftPercent="92%"
            app:layout_marginTopPercent="10%"/>

    </android.support.percent.PercentRelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/head"
        app:layout_heightPercent="90%"
        app:layout_widthPercent="100%" />




</android.support.percent.PercentRelativeLayout>
