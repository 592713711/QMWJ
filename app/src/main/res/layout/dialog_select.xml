<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bubble">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="10"
        android:singleLine="true"
        android:text="发送当前路线"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/location_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text"
        android:layout_below="@+id/text"
        android:layout_marginTop="3dp"
        android:maxEms="8"
        android:minEms="8"
        android:singleLine="true"
        android:text="中南林业科技大学电子信息楼"
        android:textSize="13sp" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/location_msg"
        android:layout_alignTop="@+id/text"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@id/fenggexian"
        android:layout_toEndOf="@+id/location_msg"
        android:background="#e0e0e0" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:id="@+id/send_way_btn"
        android:layout_marginTop="3dp"
        android:src="@drawable/send_way_btn"
        android:background="#00000000"
        android:layout_alignTop="@id/fenggexian"
        android:layout_toEndOf="@id/fenggexian"

        android:layout_marginLeft="5dp"/>
</RelativeLayout>