<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="control.home.MonitorActivity">



    <android.support.percent.PercentRelativeLayout
        android:id="@+id/head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#29b6f6"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="熙 熙"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/quit_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#00000000"
            android:onClick="doQuit"
            android:scaleType="fitXY"
            android:src="@drawable/quit_btn"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="7%"
            app:layout_marginTopPercent="25%"
            app:layout_widthPercent="5%" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_heightPercent="84%"
        app:layout_marginTopPercent="8%"
        app:layout_widthPercent="100%"

        />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#f9f9f9"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#eeeeee"
            />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_heightPercent="100%"
            android:id="@+id/radio_group"
            app:layout_widthPercent="100%">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

               <RadioButton
                   android:id="@+id/msg_btn"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:background="@drawable/msg_btn_bg"
                   android:button="@null"
                   android:gravity="center"
                   android:scaleType="fitXY"
                   android:layout_marginTop="5dp"
                   android:checked="true"
                   android:layout_marginBottom="6dp"
                   />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>

               <RadioButton
                   android:id="@+id/map_btn"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:background="@drawable/map_btn_bg"
                   android:button="@null"
                   android:scaleType="fitXY"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="6dp"
                  />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>

               <RadioButton
                   android:id="@+id/phone_btn"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:background="@drawable/phone_btn_bg"
                   android:button="@null"
                   android:scaleType="fitXY"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="6dp"
                    />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </RadioGroup>
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
