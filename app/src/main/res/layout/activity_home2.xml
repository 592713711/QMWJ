<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:windowSoftInputMode="stateVisible|adjustResize"
    tools:context="under_control.home.HomeActivity_under">


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#29b6f6"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="信息"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            app:layout_marginTopPercent="20%" />


        <ImageButton
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:onClick="doAdd"
            android:scaleType="fitXY"
            android:src="@drawable/add_btn"
            app:layout_heightPercent="60%h"
            app:layout_marginLeftPercent="4%"
            app:layout_widthPercent="60%h" />

        <ImageButton
            android:id="@+id/msg_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:onClick="doMsg"
            android:scaleType="fitXY"
            android:src="@drawable/msg_btn"
            app:layout_heightPercent="60%h"
            app:layout_marginRightPercent="4%"
            app:layout_widthPercent="60%h" />

        <com.ld.qmwj.view.BadgeView
            android:id="@+id/badgeView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="33%h"
            app:layout_marginLeftPercent="92%"
            app:layout_marginTopPercent="10%"
            app:layout_widthPercent="50%h" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fenggexian"
        android:layout_below="@+id/head"
        android:background="#ffffff"

        />

    <TextView
        android:id="@+id/fenggexian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottom"
        android:background="#e0e0e0" />

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" />
</com.zhy.android.percent.support.PercentRelativeLayout>



