<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        >
        <com.ld.qmwj.view.CircleImageView
            android:id="@+id/headicon_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/h1"
            app:layout_heightPercent="80%"
            app:layout_marginTopPercent="10%"
            app:layout_marginBottomPercent="10%"
            app:layout_widthPercent="20%"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer_Coder"
            app:layout_marginLeftPercent="23%"
            app:layout_marginTopPercent="10%"
            android:textColor="@android:color/black"
            android:id="@+id/name"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晚上吃什么的呢？"
            android:id="@+id/message"
            app:layout_marginLeftPercent="23%"
            app:layout_marginTopPercent="55%"
           android:textSize="13sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨天 12:30"
            android:id="@+id/time"
            android:singleLine="true"
            app:layout_widthPercent="20%"
            app:layout_marginLeftPercent="80%"
            app:layout_marginTopPercent="17%"
            android:textSize="12sp"
             />

        <com.ld.qmwj.view.BadgeView
            android:id="@+id/badgeView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="6%"
            app:layout_marginLeftPercent="90%"
            app:layout_marginTopPercent="49%"
            />

    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text=""
        android:id="@+id/fenggexian"
        android:background="#eeeeee"
        android:layout_marginTop="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>