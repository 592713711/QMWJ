<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heart_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04月11日 22:14"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_marginLeftPercent="7%"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/heart_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/heart_time"
            android:layout_below="@+id/heart_time"
            android:layout_marginTop="4dp"
            android:text="心率正常"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/heart_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="95"
            android:textColor="@color/red"
            android:textSize="21sp"
            app:layout_marginRightPercent="18%" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="次/分"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:layout_marginRightPercent="5%"
            />

        <TextView
            android:id="@+id/fenggexian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#eeeeee"
            android:layout_below="@+id/heart_state"
            android:layout_marginTop="12dp"
            android:text="" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


</RelativeLayout>